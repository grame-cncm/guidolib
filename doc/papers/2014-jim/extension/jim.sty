% define the format for the author's names
\def\oneauthor#1#2{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\em #1} \\
            #2\relax
       \end{tabular}\hskip 1in
    }
}
\def\twoauthors#1#2#3#4{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\em #1} \\
            #2
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\em #3} \\
            #4\relax
        \end{tabular}
    }
}
\def\threeauthors#1#2#3#4#5#6{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\em #1} \\
            #2
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\em #3} \\
            #4
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\em #5} \\
            #6\relax
        \end{tabular}
    }
}

