\def\maketitle{\par
    \begingroup
        \def\thefootnote{}
        \def\@makefnmark{
            \hbox
            {$^{\@thefnmark}$\hss}
        }
        \twocolumn[\@maketitle]
%        \permission
        \@thanks
    \endgroup
    \setcounter{footnote}{0}
    \let\maketitle\relax
    \let\@maketitle\relax
    \gdef\thefootnote{
        \arabic{footnote}
    }
    \gdef\@@savethanks{}
    \gdef\@thanks{}
    \gdef\@author{}
    \gdef\@title{}
    \let\thanks\relax
}

\def\@maketitle{
    \newpage
    \null
    \vskip 0em 
    \begin{center} {
            \Large \bf \@title \par
        }
        \vskip 1.5em {
            \large \lineskip .5em
            \begin{tabular}[t]{c}
                \@author \\ 
            \end{tabular}
            \par
        }
    \end{center}
    \par
    \vskip 1.5em
}

