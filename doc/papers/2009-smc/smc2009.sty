% define the format for the author's names
\def\oneauthor#1#2{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\bf #1} \\
            #2\relax
       \end{tabular}\hskip 1in
    }
}
\def\twoauthors#1#2#3#4{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\bf #1} \\
            #2
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\bf #3} \\
            #4\relax
        \end{tabular}
    }
}
\def\threeauthors#1#2#3#4#5#6{
    \gdef\@author{
        \begin{tabular}{@{}c@{}}
            {\bf #1} \\
            #2
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\bf #3} \\
            #4
        \end{tabular}\hskip 1in
        \begin{tabular}{@{}c@{}}
            {\bf #5} \\
            #6\relax
        \end{tabular}
    }
}

% Abstract section
\def\abstract{
    \begin{center}{
        \bf ABSTRACT
    }
    \end{center}
}
\def\endabstract{\par}


\def\@sect#1#2#3#4#5#6[#7]#8{
   \refstepcounter{#1}\edef\@svsec{\csname the#1\endcsname\hskip 0.6em}
       \begingroup \ifnum #2=1\bf\centering
          {\interlinepenalty \@M
             \@svsec\uppercase{#8}\par}\else\ifnum #2=2\bf
          \noindent{\interlinepenalty \@M \@svsec #8\par}\else\it
          \noindent{\interlinepenalty \@M
             \@svsec #8\par}\fi\fi\endgroup
       \csname #1mark\endcsname{#7}\addcontentsline
         {toc}{#1}{\protect\numberline{\csname the#1\endcsname} #7}
     \@tempskipa #5\relax
     \@xsect{\@tempskipa}}


